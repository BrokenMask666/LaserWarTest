<UserControl
    x:Class="LaserwarTest.UI.Layouts.DialogLayout"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LaserwarTest.UI.Layouts"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
    
    >

    <Grid Background="{x:Bind Background, Mode=OneWay}" Padding="50,70,50,50">
        <Grid Background="{x:Bind Background, Mode=OneWay}">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <TextBlock
                Style="{StaticResource LW_TextBlockPageTitleStyle}"
                MaxLines="2"
                Margin="0,-5,0,50"
                Text="{x:Bind Title, Mode=OneWay}"
                />

            <ContentPresenter
                Grid.Row="1"
                Margin="0,0,0,10"
                Content="{x:Bind InnerContent, Mode=OneWay}"
                />

            <ContentPresenter
                Grid.Row="2"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Right"
                Content="{x:Bind CommandsBar, Mode=OneWay}"
                />

        </Grid>
    </Grid>
</UserControl>
